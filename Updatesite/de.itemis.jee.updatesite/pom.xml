<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<relativePath>../de.itemis.jee.releng/pom.xml</relativePath>
		<groupId>de.itemis.jee</groupId>
		<artifactId>de.itemis.jee.releng</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<artifactId>de.itemis.jee.updatesite</artifactId>
	<packaging>eclipse-repository</packaging>

	<name>JEE DSL Update Site</name>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-p2-repository-plugin</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<includeAllDependencies>false</includeAllDependencies>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-p2-director-plugin</artifactId>
				<version>${tycho-version}</version>
				<executions>
					<execution>
						<id>materialize-products</id>
						<goals>
							<goal>materialize-products</goal>
						</goals>
					</execution>
					<execution>
						<id>archive-products</id>
						<goals>
							<goal>archive-products</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.jboss.tools.tycho-plugins</groupId>
				<artifactId>repository-utils</artifactId>
				<version>0.19.0-SNAPSHOT</version>
				<executions>
					<execution>
						<id>generate-facade</id>
						<phase>package</phase>
						<goals>
							<goal>generate-repository-facade</goal>
						</goals>
						<configuration>
							<siteTemplateFolder>templates</siteTemplateFolder>
							<!-- Symbols are used while expanding index.html template -->
							<symbols>
								<update.site.name>JEE Generators Repository</update.site.name>
								<update.site.description>This URL can be used inside eclipse for
									installing new software.</update.site.description>
								<update.site.version>${project.version}</update.site.version>
								<target.eclipse.version>${target.eclipse.version}</target.eclipse.version>
							</symbols>
							<!-- <p2StatsUrl>http://server.org/url/where/to/push/stats</p2StatsUrl> -->
							<associateSites>
<!-- 								<site>http://download.eclipse.org/releases/kepler</site> -->
<!-- 								<site>http://download.eclipse.org/rmf/updates/</site> -->
								<site>http://oaw.sourceforge.net/updates/</site>
								<site>http://download.itemis.com/updates/releases/2.0.0/</site>
							</associateSites>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<version>1.0.0</version>
</project>