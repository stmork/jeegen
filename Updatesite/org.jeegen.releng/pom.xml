<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<name>JEE  DSL Releng</name>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.jeegen</groupId>
	<artifactId>releng</artifactId>
	<version>1.0.0</version>
	<packaging>pom</packaging>

	<!-- this is the parent POM from which all modules inherit common settings -->
	<properties>
		<tycho-version>0.24.0</tycho-version>
		<tycho-extras-version>0.24.0</tycho-extras-version>
		<antrun-version>1.8</antrun-version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<eclipse.distro>mars</eclipse.distro>
		<source.update.site>http://www.jee-generator.org/updates/release/</source.update.site>
	</properties>

	<modules>
		<module>../../JEE6/org.jeegen.jee6</module>
		<module>../../JEE6/org.jeegen.jee6.ui</module>
		<module>../../JEE6/org.jeegen.jee6.feature</module>
		<module>../../JEE7/org.jeegen.jee7</module>
		<module>../../JEE7/org.jeegen.jee7.ui</module>
		<module>../../JEE7/org.jeegen.jee7.feature</module>
		<module>../org.jeegen.updatesite</module>
	</modules>

	<build>
		<!--resources> <resource> <directory> [your folder here] </directory> </resource> 
			</resources -->
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<!-- enable tycho build extension -->
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>
<!--
			<plugin>
				<groupId>de.itemis.signing</groupId>
				<artifactId>itemis-jarsigner</artifactId>
				<version>0.0.5-SNAPSHOT</version>
				<configuration>
					<sshKey>/opt/hudson/home/id_yakindu_cc</sshKey>
					<signerUrl>signing@macbuilds.itemis.de</signerUrl>
				</configuration>
				<executions>
					<execution>
						<id>sign</id>
