module de.itemis.jee6.generator.DslGeneratorMWE

import org.eclipse.emf.mwe.utils.*
 
var slotname='model'
var modelpath
var impldir
var srcdir
var resdir

Workflow
{
	bean = StandaloneSetup
	{
		registerGeneratedEPackage = "de.itemis.jee6.jee6.Jee6Package"
		platformUri = ".."
	}

	component = org.eclipse.xtext.mwe.Reader
	{
		// lookup all resources on the classpath
		// useJavaClassPath = true

		// or define search scope explicitly
		path = modelpath

		// this class will be generated by the xtext generator
		register = de.itemis.jee6.DslStandaloneSetup  {}
		load =
		{
			slot = slotname
			type = 'Model'
		}
	}

	component = DirectoryCleaner
	{
		directory = srcdir
	}

	component = DirectoryCleaner
	{
		directory = resdir
	}

	component = org.eclipse.xpand2.Generator
	{
		metaModel = org.eclipse.xtend.typesystem.emf.EmfRegistryMetaModel {}
		expand = "de::itemis::jee6::generator::xpt::modell::Main FOREACH ${slotname}"
		outlet =
		{
			path = srcdir
			postprocessor = org.eclipse.xpand2.output.JavaBeautifier {}
		}
		outlet =
		{
			name = "IMPL"
			path = impldir
			overwrite = false
			postprocessor = org.eclipse.xpand2.output.JavaBeautifier {}
		}
		outlet =
		{
			name = "RES"
			path = resdir
			postprocessor = org.eclipse.xtend.typesystem.xsd.XMLBeautifier
			{
				formatComments=false
			}
		}
	}
}
